<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base glass layer -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/bg_card_alpha" />
            <corners android:radius="@dimen/corner_radius_medium" />
        </shape>
    </item>
    
    <!-- Gradient overlay -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="0"
                android:startColor="@color/glass_overlay"
                android:centerColor="@android:color/transparent"
                android:endColor="@color/glass_overlay"
                android:type="linear" />
            <corners android:radius="@dimen/corner_radius_medium" />
        </shape>
    </item>
</layer-list>
