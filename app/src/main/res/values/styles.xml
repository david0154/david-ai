<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base Text Style -->
    <style name="TextAppearance.DAVID" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
    
    <!-- Text Styles with hardcoded sizes -->
    <style name="TextAppearance.DAVID.Display">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/primary_cyan</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:letterSpacing">0.15</item>
    </style>
    
    <style name="TextAppearance.DAVID.Title">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/primary_cyan</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    
    <style name="TextAppearance.DAVID.Body">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
    
    <style name="TextAppearance.DAVID.Caption">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:letterSpacing">0.2</item>
    </style>
    
    <!-- Button Styles with hardcoded values -->
    <style name="Widget.DAVID.Button" parent="Widget.Material3.Button">
        <item name="android:minHeight">48dp</item>
        <item name="backgroundTint">@color/glass_overlay</item>
        <item name="android:textColor">@color/primary_cyan</item>
    </style>
    
    <style name="Widget.DAVID.Button.Icon">
        <item name="android:textSize">20sp</item>
    </style>
    
    <!-- Card Styles with hardcoded values -->
    <style name="Widget.DAVID.Card" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardBackgroundColor">@color/bg_card_alpha</item>
        <item name="cardElevation">4dp</item>
    </style>
    
    <!-- FAB Style -->
    <style name="Widget.DAVID.FloatingActionButton" parent="Widget.Material3.FloatingActionButton.Primary">
        <item name="tint">@android:color/black</item>
        <item name="backgroundTint">@color/primary_cyan</item>
    </style>
</resources>
