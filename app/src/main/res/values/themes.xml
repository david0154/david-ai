<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base DAVID AI Theme - Using AppCompat for compatibility -->
    <style name="Theme.DavidAI" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary Colors -->
        <item name="colorPrimary">@color/primary_cyan</item>
        <item name="colorPrimaryDark">@color/primary_cyan_dark</item>
        <item name="colorAccent">@color/accent_green</item>
        
        <!-- Background -->
        <item name="android:colorBackground">@color/bg_dark_primary</item>
        
        <!-- Status Bar -->
        <item name="android:statusBarColor">@color/bg_dark_primary</item>
        <item name="android:navigationBarColor">@color/bg_dark_primary</item>
        <item name="android:windowLightStatusBar">false</item>
        
        <!-- Typography -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        
        <!-- No Action Bar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        
        <!-- Fullscreen support -->
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>
    
    <!-- Splash Screen Theme -->
    <style name="Theme.DavidAI.Splash" parent="Theme.DavidAI">
        <item name="android:windowBackground">@color/bg_dark_primary</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>
    
    <!-- Material 3 compatibility for Compose -->
    <style name="Theme.DavidAI.Material3" parent="Theme.DavidAI">
        <!-- Compose will handle Material 3 theming -->
    </style>
</resources>
