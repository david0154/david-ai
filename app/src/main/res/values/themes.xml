<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base DAVID AI Theme -->
    <style name="Theme.DavidAI" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Primary Colors -->
        <item name="colorPrimary">@color/primary_cyan</item>
        <item name="colorPrimaryVariant">@color/primary_cyan_dark</item>
        <item name="colorOnPrimary">@android:color/black</item>
        
        <!-- Secondary Colors -->
        <item name="colorSecondary">@color/accent_blue</item>
        <item name="colorSecondaryVariant">@color/accent_light_blue</item>
        <item name="colorOnSecondary">@android:color/white</item>
        
        <!-- Background -->
        <item name="android:colorBackground">@color/bg_dark_primary</item>
        <item name="colorSurface">@color/bg_dark_secondary</item>
        <item name="colorOnSurface">@color/text_primary</item>
        
        <!-- Status Bar -->
        <item name="android:statusBarColor">@color/bg_dark_primary</item>
        <item name="android:navigationBarColor">@color/bg_dark_primary</item>
        <item name="android:windowLightStatusBar">false</item>
        
        <!-- Typography -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        
        <!-- No Action Bar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    
    <!-- Splash Screen Theme -->
    <style name="Theme.DavidAI.Splash" parent="Theme.DavidAI">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>
</resources>
